<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>
    <style>
      body {
        background-color: lightblue;
      }
    </style>

    <!--<header class="navbar navbar-fixed-top navvbar-inverse"> -->
      <nav class="navbar navbar-fixed-top navbar-dark bg-dark">
        <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">          
            <%= link_to "Home", user_path(current_user), class: "navbar-brand" %>
            <%= link_to "My Players", user_players_path(current_user), class: "navbar-brand" %>
            <%= link_to "Add a Player", new_player_path, class: "navbar-brand" %>
            <%= link_to "All Players", players_path, class: "navbar-brand" %>
            <%= link_to "Add a Review", new_review_path, class: "navbar-brand" %>
            <%= link_to "All Reviews", reviews_path, class: "navbar-brand" %>
            <%= link_to "All Teams", teams_path, class: "navbar-brand" %>          
        </div> 
      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <%= form_tag("/players", method: 'get') do %>          
            <%= text_field_tag(:q, nil, placeholder: 'Search for a player') %>
            <%= submit_tag("Search") %>
          <% end %>
        </div>
      </nav>          


      <nav class="nav navbar-nav navbar-end">
        <%= link_to "Log Out", '/logout', class: "navbar-brand", method: :delete %>
      </nav>      
      </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
      </nav>
  </body>
</html>