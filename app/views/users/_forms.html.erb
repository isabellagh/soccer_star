<h1 class="text-center mt-4">Sign Up!</h1>
<br>
<br>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_for(@user, class: "shadow p-3 mb-3 bg-info rounded") do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: "col-2 col-form-label-lg text-dark" %>
            <div class="col-10"> 
              <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
            </div>
          </div>
     
          <div class="form-group row">
            <%= f.label :password, class: "col-2 col-form-label-lg text-dark" %>
            <div class="col-10"> 
              <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :name, class: "col-2 col-form-label-lg text-dark" %>
            <div class="col-10"> 
              <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter your first and last name" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :image_url, class: "col-2 col-form-label-lg text-dark" %>
            <div class="col-10"> 
              <%= f.text_field :image_url, class: "form-control shadow rounded", placeholder: "Enter an image link address" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit "Sign Up", class: "btn btn-outline-dark btn-lg" %>
          </div>
        <% end %>
    </div>
  </div>
</div>